<div id="restlist">
	<div id="restlistbox">
		<h1>List of Restaurants</h1>

		<table class="table table-hover">
			<tr>
				<th>NAME</th>
				<th>CITY</th>
				<th>ZIP</th>
				<th>FEE</th>
				<th>LINK</th>
				<th>NOTES</th>
			</tr>
				
			<% @rests.each do |rest| %>

			<tr>			
				<td><%= link_to rest.name, rest %></td>
				<td><%= rest.city %></td>
				<td><%= rest.zip %></td>
				<td>$<%= rest.fee %></td>
				<td><a href="<%= rest.web %>"><%= rest.name %></a></td>
				<td><%= rest.notes %></td>
			</tr>	
			<%end %>
		
		</table>
	</div>
</div>


