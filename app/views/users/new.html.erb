<div id="newrest">
  <div id="newrestbox" class="jumbotron">
    <h1>Create a New User</h1></br>

      <%= form_for @user , html: {class: "form-group col-lg-10"} do |i|%>

        <p>
          <%= i.label :email, ""%><br/>
          <%= i.text_field :email %>
        </p>
        <p>
          <%= i.label :password, ""%><br/>
          <%= i.password_field :password%> 
        </p>
        <p>
          <%= i.label :password_confirmation, ""%><br/>
          <%= i.password_field :password_confirmation %>
        </p>
        <p>
          <%= i.submit%>
        </p>
      <%end%>
          
  </div>
</div>